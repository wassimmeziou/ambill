<form method="post" action="{{ path('client_delete', {'id': client.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
    <button class="btn btn-danger custombutton" {% if app.request.attributes.get('_route') in [
                    'client_index' ,
                    'client_new' ,
                    'client_edit' ,
                    'client_delete'
                    ] %}  style="
      margin-top: -60px;
    margin-left: 115px;" {% endif %}><i class="fa fa-trash-o"></i> Supprimer</button>
</form>
