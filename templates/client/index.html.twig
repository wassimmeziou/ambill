{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <h1>Client index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>RaisonSocial</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Tel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.raisonSocial }}</td>
                <td>{{ client.adresse }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.tel }}</td>
          <td style="display: -webkit-box">
                  <li style="list-style-type: none">
                                <a class="" href="{{ path('client_show', {'id': client.id}) }}">
                                    <i class="lnr lnr-eye mr"></i>
                                
                                </a>
                            </li>
                            <li style="list-style-type: none">
                                <a class="" href="{{ path('client_edit', {'id': client.id}) }}">
                                    <i class="lnr lnr-pencil"></i>
                                    
                                </a>
                            </li>
                            <li style="list-style-type: none">
                            <form method="post" action="{{ path('client_delete', {'id': client.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">

                                <button class="btn-link" style="margin-top: -10px">
                                    <input name="_method" type="hidden" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                                    <i class="lnr lnr-trash"></i>

                                </button>
                            </form>
                        </li>
                    {# <a href="">show</a> #}
                    {# <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}">Create new</a>
{% endblock %}
