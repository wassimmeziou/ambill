{% extends 'base.html.twig' %}

{% block title %}LigneCommand index{% endblock %}

{% block body %}
    <h1>LigneCommand index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Qte</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ligne_command in ligne_commands %}
            <tr>
                <td>{{ ligne_command.id }}</td>
                <td>{{ ligne_command.qte }}</td>
                <td>
                    <a href="{{ path('ligne_command_show', {'id': ligne_command.id}) }}">show</a>
                    <a href="{{ path('ligne_command_edit', {'id': ligne_command.id}) }}">edit</a>
                </td>
