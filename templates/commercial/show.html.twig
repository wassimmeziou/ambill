        </tbody>
    </table>

    <a href="{{ path('commercial_index') }}" style="color:#00AAFF"><button class="btn btn-light custombutton" style="float:right;margin-left:5px;" type="button"/><i class="lnr lnr-arrow-left-circle"></i>Retourner</a>

    <a href="{{ path('commercial_edit', {'id': commercial.id}) }}" style="color:#fff"><button class="btn btn-primary custombutton" style="float:right" type="button"/><i class="fa fa-check-circle"></i>Modifier</a>

    {{ include('commercial/_delete_form.html.twig') }}
