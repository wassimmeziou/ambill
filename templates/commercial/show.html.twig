{% extends 'base.html.twig' %}

{% block title %}Commercial{% endblock %}

{% block body %}
    <h1>Commercial</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commercial.id }}</td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ commercial.cin }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ commercial.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ commercial.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ commercial.adresse }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ commercial.ville }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ commercial.age }}</td>
