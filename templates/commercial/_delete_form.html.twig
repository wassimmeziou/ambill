<form method="post" action="{{ path('commercial_delete', {'id': commercial.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commercial.id) }}">
  <button class="btn btn-danger custombutton" {% if app.request.attributes.get('_route') in [
                    'commercial_index' ,
                    'commercial_new' ,
                    'commercial_edit' ,
                    'commercial_delete'
                    ] %}  style="
      margin-top: -60px;
    margin-left: 140px;" {% endif %}><i class="fa fa-trash-o"></i> Supprimer</button>
</form>
